
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}
enum ProjectTag {
  Financiando
  Rentando
  Cerrado
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String  @unique 
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?

  accounts      Account[]
  sessions      Session[] 
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String? 
  token_type        String?
  scope             String?
  id_token          String?
  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model BlogEntry {
  id String @id @default(cuid())
  title String
  content String
  date DateTime
  image String
}


model LandProject {
  id String @id @default(cuid())
  name String
  content String
  image String
  tokenName String
  investmentPeriod Int
  totalProfit String
  anualProfit String
  price String
  location String
  tag ProjectTag
  progress Int
  minPrice String
  rentStart DateTime

}

